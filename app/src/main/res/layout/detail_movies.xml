<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"

    android:paddingBottom="@dimen/activity_vertical_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/backdrop_id"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:contentDescription="backdrop poster"
            android:scaleType="fitXY"
            android:src="@drawable/poster_a_start_is_born"
            android:tint="@color/poster_banner_tint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardviewPosterDetail"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="138dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/backdrop_id"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/backdrop_id"
            app:layout_constraintTop_toTopOf="@+id/backdrop_id"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/img_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Poster"
                android:scaleType="fitXY"
                tools:src="@android:color/darker_gray" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="160dp"

            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textSize="15sp"

            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backdrop_id"
            tools:text="@string/test" />

        <TextView
            android:id="@+id/date_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_id"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_id"
            tools:text="@string/test" />

        <TextView
            android:id="@+id/genre_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="8dp"
            android:textColor="#fff"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_id"
            tools:text="GENRE ID ID ID" />

        <TextView
            android:id="@+id/desc_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="#fff"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardviewPosterDetail"
            tools:text="@string/test" />

        <RatingBar
            android:id="@+id/rating_id"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="8dp"
            android:stepSize="0.01"
            android:textColor="#fff"
            android:textSize="12sp"
            android:theme="@style/RatingBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/genre_id"
            tools:text="@string/test" />

        <TextView
            android:id="@+id/rating_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/duskYellow"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/rating_id"
            app:layout_constraintTop_toBottomOf="@id/genre_id"
            tools:text="@string/test" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>