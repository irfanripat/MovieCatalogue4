<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardView"
        android:id="@+id/movie_cv"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:id="@+id/img_id"
            android:layout_width="100dp"
            android:layout_height="150dp"

            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:scaleType="fitXY"
            android:contentDescription="Movie Poster"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/poster_a_start_is_born" />

        <TextView
            android:id="@+id/title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="135dp"
            android:layout_toEndOf="@+id/img_id"
            android:textColor="#fff"

            android:textSize="18sp"
            android:textStyle="bold"

            app:layout_constraintStart_toEndOf="@+id/img_id"
            app:layout_constraintTop_toTopOf="@+id/img_id"
            tools:text="@string/test" />

        <TextView
            android:id="@+id/date_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_id"
            android:layout_marginStart="135dp"
            android:layout_toEndOf="@+id/img_id"
            android:textColor="#fff"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/img_id"
            app:layout_constraintTop_toBottomOf="@+id/title_id"
            tools:text="@string/test" />


        <RatingBar
            android:id="@+id/rating_id"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:theme="@style/RatingBar"
            android:layout_height="wrap_content"
            android:stepSize="0.01"
            android:layout_marginStart="144dp"
            android:layout_marginBottom="16dp"
            android:textColor="#fff"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/test" />

        <TextView
            android:id="@+id/rating_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:textColor="@color/duskYellow"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@id/rating_id"
            app:layout_constraintStart_toEndOf="@+id/rating_id"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="75" />

        <TextView
            android:id="@+id/genre_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date_id"
            tools:text="@string/test" />



    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</ScrollView>
