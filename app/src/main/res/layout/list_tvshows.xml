<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardView"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="100dp"

        >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:id="@+id/img_id"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="12dp"
            android:scaleType="fitXY"
            android:contentDescription="TV Poster"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/poster_a_start_is_born" />

        <TextView
            android:id="@+id/title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_toEndOf="@+id/img_id"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/test" />

        <TextView
            android:id="@+id/startDate_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_id"
            android:layout_marginStart="135dp"
            android:layout_toEndOf="@+id/img_id"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_id"
            tools:text="@string/test" />

        <TextView
            android:id="@+id/language_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startDate_id"
            android:layout_marginStart="135dp"
            android:layout_toEndOf="@+id/img_id"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startDate_id"
            tools:text="@string/test" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/ic_star_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rating_id"
            app:layout_constraintStart_toEndOf="@+id/img_id"
            app:layout_constraintTop_toBottomOf="@+id/img_id" />

        <TextView
            android:id="@+id/rating_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginBottom="4dp"
            android:textColor="#fff"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Test" />

        <TextView
            android:id="@+id/pop_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/language_id"
            android:layout_marginStart="135dp"
            android:layout_toEndOf="@+id/img_id"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/language_id"
            tools:text="@string/test" />

        <ImageButton
            android:id="@+id/button_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_more_black_24dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pop_id"
            app:layout_constraintVertical_bias="1.0" />


    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</ScrollView>